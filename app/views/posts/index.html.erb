<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<%= link_to 'New Post', new_post_path %>

<div>
<table class="">
<tbody>
<tr>
  <td>タイトル</td>
  <td>内容</td>
  <td>編集内容</td>
</tr>

<% @posts.each do |post| %>
    <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to "削除", post_path(id: post.id), method: :delete , data: {confirm: "削除しますか？"}%></td>
    </tr>
<% end %>
</tbody>
</table>

</div>
